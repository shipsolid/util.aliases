//v3
{
    "version": "2.0.0",
    "tasks": [
        {
        //   "label": "Make: run (current file)",
        "label": "Run Python Script",
            "type": "shell",
            "command": "make",
            "args": [
            "run",
            "SCRIPT=${file}"
            ],
            "options": {
            "cwd": "${workspaceFolder}",
            "shell": { "executable": "/usr/bin/bash", "args": ["-lc"] }
            },
            "presentation": {
            "echo": false,
            "reveal": "silent",
            "focus": false,
            "panel": "dedicated",
            "showReuseMessage": false,
            "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Make: run-ts (current file, timestamped)",
            "type": "shell",
            "command": "make",
            "args": [
            "run-ts",
            "SCRIPT=${file}"
            ],
            "options": {
            "cwd": "${workspaceFolder}",
            "shell": { "executable": "/usr/bin/bash", "args": ["-lc"] }
            },
            "presentation": {
            "echo": false,
            "reveal": "silent",
            "focus": false,
            "panel": "dedicated",
            "showReuseMessage": false,
            "clear": false
            },
            "problemMatcher": []
        }
    ]
}



