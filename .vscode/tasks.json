{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Python Script",
            "type": "shell",
            "command": "/usr/bin/bash",
            "args": [
            "-lc",
            "\"${workspaceFolder}/.venv/bin/python\" \"${workspaceFolder}/samples.python/basics.01.patterns/basics.py\" < \"${workspaceFolder}/samples.python/input.txt\" > \"${workspaceFolder}/samples.python/output.txt\" 2>&1 || true"
            ],
            "options": {
            "cwd": "${workspaceFolder}",
            "shell": {
                "executable": "/usr/bin/bash",
                "args": ["-lc"]
            }
            },
            "group": { "kind": "build", "isDefault": true },
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
}

